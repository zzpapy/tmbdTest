<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link  rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.5.4/css/uikit-core-rtl.min.css" integrity="sha256-DHInYNupVwyEiPCdLarD3LaI5ywtIwBZcFUsFaBZsQo=" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
  </head>
  <body>
    <div class="head">
      <div class="uk-flex">
        <div class="title">
          <img src="/img/back.gif" alt="">
        </div>
        <div class="uk-flex-1">
          <h1 class="uk-text-left uk-padding uk-flex-around">Exploitation de l'API tmbd</h1>
          <div class="uk-flex uk-flex-around">
            {% if actu != undefined %}
            <h3>{{actu}} - nombre de films trouvé : {{films.total_results}}</h3>
            <div class="pagin ">
              {% if films.total_results > 20 %}
                {% if search != undifined %}
                <div id="pagination" data-size="{{films.total_pages}}" data-search="{{search}}" data-href="/?search={{search}}&page="></div>     
                {% else %}
                <div id="pagination" data-size="{{films.total_pages}}" data-search="{{search}}" data-href="/now?page="></div> 
                {% endif %}
              {% endif %}
              {% if page >= 1 %}
              {% set page = page %}
              {% else %}
                {% set page = 1 %}
              {% endif %}
              <p>page n° : {{page}}</p>
            </div>
            {% endif %}
        </div>
      </div>
    </div>
    </div>
    <div class="uk-flex uk-flex-between">
      {% block nav %}
      <nav class="back uk-padding uk-navbar uk-width-1-5" >
        <div class="uk-navbar-start uk-flex">
            <ul class="uk-navbar-nav uk-flex uk-flex-column nav_color">
                <li class="uk-active">
                  <label class="label">Recherche par titre</label>
                  <form method="post" action="/">
                    <input type="text" name="search">
                    <input type="submit">
                  </form>
                </li>
                <li class="ligne"></li>
                <li>
                  <label class="label">Recherche par acteur ou réalisateur</label>
                  <form method="post" action="/actorFind">
                    <input type="text" name="search">
                    <input type="submit">
                  </form></li>
                </li>
                <li class="ligne"></li>
                <li>
                  <label class="label">Recherche par date</label>
                  <form method="post" action="/year">
                    <table>
                      <tr>
                        <td>de  </td>
                        <td>
                          <input type="date" name="dateDeb">
                        </td>
                      </tr>
                      <tr>
                        <td>à  </td>
                        <td>
                          <input type="date" name="dateFin">
                        </td>
                      </tr>

                    </table>
                    <label for="">rechercher en france</label>
                    <input type="checkbox" name="fr" value="FR">
                    <input type="submit">
                  </form>
                </li>
                <li class="ligne"></li>
                <li><a href="/now">Actuellement en france</a></li>
            </ul>
    
        </div>
    </nav>
      
      {% endblock %}
      <div class="nav">
        {% block body %}{% endblock %}
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/scripts/jq-paginator.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.5.4/js/uikit.min.js" integrity="sha256-8QekXFS5Mxv+c4TrPQY01b+3GUCDKMEtUT4hwe79u+U=" crossorigin="anonymous"></script>
    <script src="/scripts/script.js"></script>
  </body>
</html>
